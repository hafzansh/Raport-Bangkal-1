<Page x:Class="Raport.Pages.Dasis"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Raport.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Data Siswa">

    <Grid>
        <Border CornerRadius="5" Background="{DynamicResource SecundaryBackgroundColor}">
            <StackPanel Orientation="Vertical">
                <DataGrid EnableColumnVirtualization="True" EnableRowVirtualization="True" x:Name="dasisDG" Height="407" CellEditEnding="dasisDG_CellEditEnding"/>
                <Button Content="Save" Width="100" Height="20" Click="Button_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
