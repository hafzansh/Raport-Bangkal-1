<Page x:Class="Raport.Pages.Dashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Raport.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Dashboard">

    <Border CornerRadius="5" Background="{DynamicResource SecundaryBackgroundColor}">
        <StackPanel Orientation="Vertical">
            <DataGrid EnableColumnVirtualization="True" EnableRowVirtualization="True" Name="DG_mtk" Margin="0,0,0,10" Height="407" CellEditEnding="DG_mtk_CellEditEnding"/>
            <Button Content="Save" Width="100" Height="20" Click="Button_Click"/>
        </StackPanel>
    </Border>
</Page>
